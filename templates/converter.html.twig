{% extends "base.html.twig" %}

{% block body %}
    <div class="m-6 p-4 bg-gray-100 inline-flex flex-col items-center">
        <h2 class="text-2xl uppercase font-bold mb-3">Cartesian To Polar</h2>
        <form class="flex flex-col items-center" action="/cartesian-to-polar">
            <div class="mb-3">
                <label for="xcoordinate">X : </label>
                <input type="number" id="xcoordinate" name="xcoordinate" class="border-2 pl-2 border-black w-24" required step=".01" value="{{ x|default('')|round(2) }}">
            </div>
            <div class="mb-3">
                <label for="ycoordinate">Y : </label>
                <input type="number" id="ycoordinate" name="ycoordinate" class="border-2 pl-2 border-black w-24" required step=".01" value="{{ y|default('')|round(2) }}">
            </div>
            <input type="submit" class="px-2 font-medium bg-gray-300 hover:bg-gray-400 cursor-pointer" value="Convert">
        </form>
        {% if length is not defined or angle is not defined %}
            <div class="mt-3">-</div>
        {% else %}
            <div class="mt-3">({{ length|round(2) }} ; {{ angle|round(2) }}Â°)</div>
        {% endif %}
    </div>

    <div class="m-6 p-4 bg-gray-100 inline-flex flex-col items-center">
        <h2 class="text-2xl uppercase font-bold mb-3">Polar To Cartesian</h2>
        <form class="flex flex-col items-center" action="/polar-to-cartesian">
            <div class="mb-3">
                <label for="length">Length : </label>
                <input type="number" id="length" name="length" class="border-2 pl-2 border-black w-24" required step=".01" value="{{ length|default('')|round(2) }}">
            </div>
            <div class="mb-3">
                <label for="angle">Angle : </label>
                <input type="number" id="angle" name="angle" class="border-2 pl-2 border-black w-24" required step=".01" value="{{ angle|default('')|round(2) }}">
            </div>
            <input type="submit" class="px-2 font-medium bg-gray-300 hover:bg-gray-400 cursor-pointer" value="Convert">
        </form>
        {% if length is not defined or angle is not defined %}
            <div class="mt-3">-</div>
        {% else %}
            <div class="mt-3">({{ x|round(2) }} ; {{ y|round(2) }})</div>
        {% endif %}
    </div>
{% endblock %}
